<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config SYSTEM "http://www.matsim.org/files/dtd/config_v2.dtd">
<config>
	<module name="controler" >
		<param name="firstIteration" value="0" />
		<param name="lastIteration" value="0" />
		<param name="outputDirectory" value="simulation_output" />
		<param name="overwriteFiles" value="deleteDirectoryIfExists" />
	</module>

	<module name="global" >
		<param name="coordinateSystem" value="Atlantis" />
		<param name="numberOfThreads" value="24" />
		<param name="randomSeed" value="4711" />
	</module>

    <module name="qsim">
        <param name="endTime" value="30:00:00" />
        <param name="numberOfThreads" value="24" />
    </module>

	<module name="network" >
		<param name="inputNetworkFile" value="switzerland_network.xml.gz" />
	</module>

	<module name="plans" >
		<param name="inputPlansFile" value="switzerland_population.xml.gz" />
	</module>

    <module name="households">
        <param name="inputFile" value="switzerland_households.xml.gz" />
    </module>

    <module name="facilities">
        <param name="inputFacilitiesFile" value="switzerland_facilities.xml.gz" />
    </module>

    <module name="transit">
        <param name="transitScheduleFile" value="switzerland_transit_schedule.xml.gz" />
        <param name="vehiclesFile" value="switzerland_transit_vehicles.xml.gz" />
        <param name="useTransit" value="true" />
    </module>

    <module name="planCalcScore">
        <parameterset type="activityParams">
            <param name="activityType" value="home" />
            <param name="scoringThisActivityAtAll" value="false" />
        </parameterset>
        <parameterset type="activityParams">
            <param name="activityType" value="work" />
            <param name="scoringThisActivityAtAll" value="false" />
        </parameterset>
        <parameterset type="activityParams">
            <param name="activityType" value="education" />
            <param name="scoringThisActivityAtAll" value="false" />
        </parameterset>
        <parameterset type="activityParams">
            <param name="activityType" value="shop" />
            <param name="scoringThisActivityAtAll" value="false" />
        </parameterset>
        <parameterset type="activityParams">
            <param name="activityType" value="leisure" />
            <param name="scoringThisActivityAtAll" value="false" />
        </parameterset>
        <parameterset type="activityParams">
            <param name="activityType" value="service" />
            <param name="scoringThisActivityAtAll" value="false" />
        </parameterset>
    </module>

    <module name="planscalcroute">
        <parameterset type="teleportedModeParameters">
            <param name="mode" value="bike" />
            <param name="teleportedModeSpeed" value="3.3" />
            <param name="beelineDistanceFactor" value="1.0" />
        </parameterset>
        <parameterset type="teleportedModeParameters">
            <param name="mode" value="walk" />
            <param name="teleportedModeSpeed" value="2.2" />
            <param name="beelineDistanceFactor" value="1.0" />
        </parameterset>
    </module>

    <module name="strategy">
        <parameterset type="strategysettings">
            <param name="strategyName" value="BestScore" />
            <param name="weight" value="1.0" />
        </parameterset>
    </module>
</config>
